---
interface Props {
  code: string;
  language?: string;
  filename?: string;
}

const { code, language = 'text', filename } = Astro.props;

// Sanitize code to prevent XSS
const sanitizedCode = code
  .replace(/</g, '&lt;')
  .replace(/>/g, '&gt;');
---

<div class="code-block-wrapper group">
  <div class="code-block-header">
    <div class="flex items-center gap-3">
      <!-- Window dots -->
      <div class="flex gap-1.5">
        <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
        <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
        <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
      </div>
      {filename && (
        <span class="code-block-language text-gray-400">
          {filename}
        </span>
      )}
      {!filename && language && (
        <span class="code-block-language">
          {language}
        </span>
      )}
    </div>
    
    <button 
      class="copy-button"
      data-code={code}
      aria-label="Copy code to clipboard"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
      </svg>
      <span>Copy</span>
    </button>
  </div>
  
  <pre class="!mt-0 !rounded-t-none"><code class={`language-${language}`}>{code}</code></pre>
</div>

<script>
  // Copy to clipboard functionality
  document.querySelectorAll('.copy-button').forEach((button) => {
    button.addEventListener('click', async () => {
      const code = button.getAttribute('data-code');
      if (!code) return;

      try {
        await navigator.clipboard.writeText(code);
        
        // Show success feedback
        const originalContent = button.innerHTML;
        button.innerHTML = `
          <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="text-green-400">Copied!</span>
        `;
        
        setTimeout(() => {
          button.innerHTML = originalContent;
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });
</script>

<style>
  pre {
    margin: 0;
    counter-reset: line;
  }
  
  code {
    display: block;
    overflow-x: auto;
    padding: 1rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    line-height: 1.7;
  }
  
  /* Line numbers (optional enhancement) */
  code .line {
    display: block;
  }
  
  code .line::before {
    counter-increment: line;
    content: counter(line);
    display: inline-block;
    width: 2rem;
    margin-right: 1rem;
    color: #4b5563;
    text-align: right;
    user-select: none;
  }
</style>
