---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import ReadingProgress from '../../components/ReadingProgress.astro';
import SlideMode from '../../components/SlideMode.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });
  return allPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

// Sort posts by date
const sortedPosts = allPosts.sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf());
const currentIndex = sortedPosts.findIndex((p) => p.slug === post.slug);

const prevPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null;
const nextPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null;

const { Content } = await post.render();

// Calculate reading time
const textContent = post.body.replace(/```[\s\S]*?```/g, '').replace(/`[^`]*`/g, '');
const wordsPerMinute = 200;
const wordCount = textContent.split(/\s+/).length;
const readTime = Math.max(1, Math.ceil(wordCount / wordsPerMinute));

// Parse tags from body content (look for <!-- tags: tag1, tag2 -->)
const tagsMatch = post.body.match(/<!--\s*tags:\s*([^\n]+)\s*-->/);
const bodyTags = tagsMatch ? tagsMatch[1].split(',').map(t => t.trim()).filter(Boolean) : [];
const postTags = post.data.tags && post.data.tags.length > 0 ? post.data.tags : bodyTags;

// Get headings for TOC
const headings = [];
const headingRegex = /^(#{2,3})\s+(.+)$/gm;
let match;
while ((match = headingRegex.exec(post.body)) !== null) {
  headings.push({
    depth: match[1].length,
    slug: match[2].toLowerCase().replace(/[^a-z0-9]+/g, '-'),
    text: match[2],
  });
}
---

<Layout
  title={post.data.title}
  description={post.data.description}
  image={post.data.heroImage}
  publishedTime={post.data.pubDate.toISOString()}
  modifiedTime={post.data.updatedDate?.toISOString()}
  type="article"
  tags={post.data.tags}
  currentPage="blog"
>
  <ReadingProgress readTime={readTime} />
  
  <article class="min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-8 xl:col-span-9">
          <!-- Back Button -->
          <a href="/blog" class="inline-flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-primary-500 dark:hover:text-primary-400 transition-colors mb-8 group">
            <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Articles
          </a>
          
          <!-- Article Header -->
          <header class="mb-10">
            <!-- Category & Meta -->
            <div class="flex items-center gap-3 mb-6">
              {post.data.category ? (
                <span class="tag uppercase">{post.data.category}</span>
              ) : null}
              <span class="text-sm text-gray-600 dark:text-gray-400 font-mono">
                {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </span>
              {post.data.updatedDate && (
                <span class="text-sm text-gray-600 dark:text-gray-400 font-mono">
                  • Updated {new Date(post.data.updatedDate).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric'
                  })}
                </span>
              )}
            </div>
            
            <!-- Title -->
            <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-6 leading-tight">
              {post.data.title}
            </h1>
            
            <!-- Description -->
            <p class="text-xl text-gray-700 dark:text-gray-300 leading-relaxed">
              {post.data.description}
            </p>
            
            <!-- Author & Read Time -->
            <div class="flex items-center gap-6 mt-8 pt-8 border-t border-gray-200 dark:border-terminal-border">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-500 to-cyan-400 flex items-center justify-center">
                  <span class="text-dark-900 font-bold text-sm">FA</span>
                </div>
                <div>
                  <div class="text-sm font-medium text-gray-900 dark:text-gray-100">Fajar Adnan</div>
                  <div class="text-xs text-gray-600 dark:text-gray-400">Security Researcher</div>
                </div>
              </div>
              <div class="h-8 w-px bg-gray-200 dark:bg-terminal-border"></div>
              <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {readTime} min read
              </div>
            </div>
          </header>
          
          <!-- Hero Image -->
          {post.data.heroImage && (
            <figure class="mb-10">
              <div class:list={[
                'mx-auto rounded-xl overflow-hidden border border-terminal-border',
                post.data.imageWidth === 'full' ? 'max-w-full' : null,
                post.data.imageWidth === 'large' ? 'max-w-5xl' : null,
                post.data.imageWidth === 'medium' ? 'max-w-3xl' : null,
                post.data.imageWidth === 'small' ? 'max-w-xl' : null,
              ]}>
                <img
                  src={post.data.heroImage.src}
                  alt={post.data.title}
                  class="w-full h-auto"
                  loading="lazy"
                />
              </div>
              {post.data.heroImage.alt && (
                <figcaption class="text-center text-sm text-gray-600 dark:text-gray-400 mt-3">
                  {post.data.heroImage.alt}
                </figcaption>
              )}
            </figure>
          )}
          
          <!-- Article Content -->
          <div class="prose-custom">
            <Content />
          </div>
          
          <!-- Tags -->
          {postTags && postTags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-10 pt-8 border-t border-gray-200 dark:border-terminal-border">
              {postTags.map((tag) => (
                <a href={`/blog?tag=${tag}`} class="tag">
                  #{tag}
                </a>
              ))}
            </div>
          )}
          
          <!-- Share Section -->
          <div class="mt-10 pt-8 border-t border-gray-200 dark:border-terminal-border">
            <h3 class="text-sm font-semibold text-gray-900 dark:text-gray-100 uppercase tracking-wider mb-4">
              Share this article
            </h3>
            <div class="flex gap-3">
              <a
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
                aria-label="Share on Twitter"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                </svg>
              </a>
              <a 
                href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url)}&title=${encodeURIComponent(post.data.title)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
                aria-label="Share on LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
              <a 
                href={`https://www.reddit.com/submit?url=${encodeURIComponent(Astro.url)}&title=${encodeURIComponent(post.data.title)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
                aria-label="Share on Reddit"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
                </svg>
              </a>
              <button 
                onclick="navigator.clipboard.writeText(window.location.href)"
                class="social-link"
                aria-label="Copy link"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Post Navigation -->
          {(prevPost || nextPost) && (
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-10 pt-10 border-t border-gray-200 dark:border-terminal-border">
              {prevPost && (
                <a href={`/blog/${prevPost.slug}/`} class="card p-5 group">
                  <div class="text-xs text-gray-600 dark:text-gray-400 uppercase tracking-wider mb-2">← Previous</div>
                  <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100 group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
                    {prevPost.data.title}
                  </h4>
                  <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">
                    {new Date(prevPost.data.pubDate).toLocaleDateString('en-US', {
                      month: 'short',
                      day: 'numeric',
                      year: 'numeric'
                    })}
                  </div>
                </a>
              )}
              {nextPost && (
                <a href={`/blog/${nextPost.slug}/`} class="card p-5 group md:ml-auto">
                  <div class="text-xs text-gray-600 dark:text-gray-400 uppercase tracking-wider mb-2 text-right">Next →</div>
                  <h4 class="text-lg font-semibold text-gray-900 dark:text-gray-100 group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
                    {nextPost.data.title}
                  </h4>
                  <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">
                    {new Date(nextPost.data.pubDate).toLocaleDateString('en-US', {
                      month: 'short',
                      day: 'numeric',
                      year: 'numeric'
                    })}
                  </div>
                </a>
              )}
            </div>
          )}
        </div>
        
        <!-- Sidebar (TOC) -->
        <div class="hidden lg:block lg:col-span-4 xl:col-span-3">
          <TableOfContents headings={headings} />
        </div>
      </div>
    </div>
  </article>
  
  <!-- Slide Mode Component -->
  <SlideMode headings={headings} />
</Layout>

<style>
  /* Custom code block styling */
  :global(pre) {
    @apply my-6;
  }
  
  :global(pre code) {
    @apply block px-4 py-3 overflow-x-auto;
  }
  
  /* Add line numbers to code blocks */
  :global(pre[class*="language-"]) {
    counter-reset: line;
  }
  
  :global(pre[class*="language-"] code) {
    display: block;
  }
  
  /* Security: Prevent code overflow */
  :global(.prose-custom pre) {
    @apply overflow-hidden;
  }
</style>
