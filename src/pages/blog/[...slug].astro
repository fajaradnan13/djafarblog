    <style>
        @import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;600&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');

        :root {
            --primary: #00f3ff;
            --primary-glow: rgba(0, 243, 255, 0.15);
            --primary-dark: #00b8cc;
            --bg-dark: #05070a;
            --bg-surface: #0f172a;
            --bg-surface-light: #1e293b;
            --text-main: #f1f5f9;
            --text-muted: #94a3b8;
            --text-secondary: #64748b;
            --accent: #10b981;
            --accent-glow: rgba(16, 185, 129, 0.15);
            --danger: #ef4444;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--bg-dark);
            background-image: 
                radial-gradient(ellipse at 50% -20%, rgba(0, 243, 255, 0.08) 0%, transparent 50%),
                linear-gradient(rgba(0, 243, 255, 0.015) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 243, 255, 0.015) 1px, transparent 1px);
            background-size: 100% 100%, 60px 60px, 60px 60px;
            color: var(--text-main);
            line-height: 1.7;
            min-height: 100vh;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        /* Navigation */
        nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background: rgba(5, 7, 10, 0.8);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(0, 243, 255, 0.1);
            padding: 1rem 0;
        }

        .nav-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-family: 'Fira Code', monospace;
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-main);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .logo span { color: var(--primary); }

        .nav-links {
            display: flex;
            gap: 2rem;
            list-style: none;
        }

        .nav-links a {
            color: var(--text-muted);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: color 0.3s;
        }

        .nav-links a:hover { color: var(--primary); }

        .nav-links a.active { color: var(--primary); }

        /* Blog Post Container */
        .blog-post {
            padding: 10rem 0 6rem;
        }

        /* Back Button */
        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-family: 'Fira Code', monospace;
            font-size: 0.85rem;
            color: var(--text-muted);
            text-decoration: none;
            margin-bottom: 2rem;
            transition: all 0.3s;
            cursor: pointer;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            border: 1px solid rgba(148, 163, 184, 0.2);
        }

        .back-button:hover {
            color: var(--primary);
            border-color: var(--primary);
            background: rgba(0, 243, 255, 0.05);
        }

        /* Post Header */
        .post-header {
            margin-bottom: 3rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid rgba(148, 163, 184, 0.1);
        }

        .post-category {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            font-family: 'Fira Code', monospace;
            font-size: 0.7rem;
            color: var(--primary);
            background: rgba(0, 243, 255, 0.1);
            padding: 0.3rem 0.8rem;
            border-radius: 99px;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .post-title {
            font-size: clamp(2rem, 5vw, 3.5rem);
            font-weight: 800;
            margin: 0 0 1.5rem 0;
            letter-spacing: -0.02em;
            line-height: 1.2;
            color: var(--text-main);
        }

        .post-title span {
            color: var(--primary);
            text-shadow: 0 0 30px var(--primary-glow);
        }

        .post-meta {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            font-family: 'Fira Code', monospace;
            font-size: 0.8rem;
            color: var(--text-secondary);
        }

        .post-meta-item {
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }

        /* Post Content */
        .post-content {
            font-size: 1.125rem;
            line-height: 1.9;
            color: var(--text-main);
        }

        .post-content p {
            margin-bottom: 1.5rem;
        }

        .post-content h2 {
            font-size: 1.75rem;
            font-weight: 700;
            margin: 3rem 0 1.5rem;
            color: var(--text-main);
            line-height: 1.3;
        }

        .post-content h3 {
            font-size: 1.4rem;
            font-weight: 600;
            margin: 2.5rem 0 1rem;
            color: var(--text-main);
        }

        .post-content ul, .post-content ol {
            margin: 1.5rem 0;
            padding-left: 2rem;
        }

        .post-content li {
            margin-bottom: 0.5rem;
            color: var(--text-muted);
        }

        .post-content code {
            font-family: 'Fira Code', monospace;
            font-size: 0.9em;
            background: rgba(15, 23, 42, 0.8);
            border: 1px solid rgba(148, 163, 184, 0.2);
            padding: 0.2rem 0.5rem;
            border-radius: 4px;
            color: var(--primary);
        }

        .post-content pre {
            background: var(--bg-surface-light);
            border: 1px solid rgba(148, 163, 184, 0.2);
            border-radius: 12px;
            padding: 1.5rem;
            margin: 2rem 0;
            overflow-x: auto;
        }

        .post-content pre code {
            background: transparent;
            border: none;
            padding: 0;
            color: var(--text-main);
        }

        .post-content blockquote {
            border-left: 3px solid var(--primary);
            padding-left: 1.5rem;
            margin: 2rem 0;
            color: var(--text-muted);
            font-style: italic;
        }

        .post-content a {
            color: var(--primary);
            text-decoration: none;
            border-bottom: 1px dashed var(--primary);
            transition: all 0.3s;
        }

        .post-content a:hover {
            color: var(--primary-dark);
            border-bottom-style: solid;
        }

        /* Tags */
        .post-tags {
            margin-top: 4rem;
            padding-top: 2rem;
            border-top: 1px solid rgba(148, 163, 184, 0.1);
        }

        .tags-container {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .tag {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            font-family: 'Fira Code', monospace;
            font-size: 0.75rem;
            color: var(--primary);
            background: rgba(0, 243, 255, 0.1);
            padding: 0.4rem 0.9rem;
            border-radius: 99px;
            border: 1px solid rgba(0, 243, 255, 0.2);
            transition: all 0.3s;
            text-decoration: none;
        }

        .tag:hover {
            background: rgba(0, 243, 255, 0.15);
            border-color: var(--primary);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px var(--primary-glow);
        }

        /* Navigation Cards */
        .post-navigation {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
            margin-top: 5rem;
        }

        .nav-card {
            background: var(--bg-surface);
            border: 1px solid rgba(148, 163, 184, 0.1);
            border-radius: 16px;
            padding: 1.75rem;
            transition: all 0.3s;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .nav-card:hover {
            border-color: var(--primary);
            transform: translateY(-4px);
            box-shadow: 0 10px 40px -10px var(--primary-glow);
        }

        .nav-card.prev { text-align: left; }
        .nav-card.next { text-align: right; }

        .nav-label {
            font-family: 'Fira Code', monospace;
            font-size: 0.7rem;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.75rem;
        }

        .nav-card h4 {
            font-size: 1rem;
            font-weight: 600;
            color: var(--text-main);
            margin-bottom: 0.5rem;
            line-height: 1.4;
        }

        .nav-card:hover h4 { color: var(--primary); }

        .nav-card p {
            font-family: 'Fira Code', monospace;
            font-size: 0.75rem;
            color: var(--text-muted);
        }

        /* Footer */
        footer {
            margin-top: 6rem;
            padding: 4rem 0 2rem;
            border-top: 1px solid rgba(148, 163, 184, 0.1);
            text-align: center;
        }

        .footer-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1.5rem;
        }

        .footer-logo {
            font-family: 'Fira Code', monospace;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-main);
        }

        .footer-logo span { color: var(--primary); }

        .footer-links {
            display: flex;
            gap: 2rem;
            flex-wrap: wrap;
            justify-content: center;
        }

        .footer-links a {
            color: var(--text-muted);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: color 0.3s;
        }

        .footer-links a:hover { color: var(--primary); }

        .footer-copyright {
            font-family: 'Fira Code', monospace;
            font-size: 0.8rem;
            color: var(--text-secondary);
            margin-top: 2rem;
        }

        /* Social Links */
        .social-links {
            display: flex;
            gap: 1rem;
        }

        .social-link {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--bg-surface-light);
            border: 1px solid rgba(148, 163, 184, 0.2);
            border-radius: 50%;
            color: var(--text-muted);
            text-decoration: none;
            transition: all 0.3s;
        }

        .social-link:hover {
            border-color: var(--primary);
            color: var(--primary);
            box-shadow: 0 0 20px var(--primary-glow);
            transform: translateY(-3px);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .nav-links { display: none; }
            .blog-post { padding: 8rem 0 4rem; }
            .post-title { font-size: 2rem; }
            .post-navigation { grid-template-columns: 1fr; }
            .nav-card.prev, .nav-card.next { text-align: left; }
        }
    </style>
</head>
