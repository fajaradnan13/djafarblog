import { getCollection } from 'astro:content';

/**
 * Mengambil semua postingan dari folder src/content/blog.
 * Kita menggunakan try-catch agar jika folder kosong, website tidak crash.
 */
let posts = [];
try {
    const allPosts = await getCollection('blog');
    posts = allPosts.sort((a, b) => {
        const dateA = a.data.pubDate ? new Date(a.data.pubDate).valueOf() : 0;
        const dateB = b.data.pubDate ? new Date(b.data.pubDate).valueOf() : 0;
        return dateB - dateA;
    });
} catch (error) {
    console.error("Gagal memuat koleksi blog:", error);
}
