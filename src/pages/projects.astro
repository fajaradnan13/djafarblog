---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    name: 'OpenClaw',
    description: 'A modern re-implementation of the classic Captain Claw game engine. Built with C++ and SDL2 for cross-platform compatibility.',
    tags: ['C++', 'SDL2', 'Game Development', 'Open Source'],
    github: 'https://github.com/openclaw/openclaw',
    featured: true,
  },
  {
    name: 'Security Tools',
    description: 'A collection of security research tools and scripts for penetration testing and vulnerability assessment.',
    tags: ['Python', 'Security', 'Pentesting'],
    github: 'https://github.com/fajaradnan13',
    featured: true,
  },
  {
    name: 'DJAFAR Blog',
    description: 'Modern tech blog built with Astro and TailwindCSS. Features TinaCMS integration, SEO optimization, and security hardening.',
    tags: ['Astro', 'TypeScript', 'TailwindCSS', 'SEO'],
    github: 'https://github.com/fajaradnan13/djafarblog',
    featured: true,
  },
  {
    name: 'DevOps Scripts',
    description: 'Automation scripts and configurations for CI/CD pipelines, Docker containers, and Kubernetes deployments.',
    tags: ['Bash', 'Docker', 'Kubernetes', 'CI/CD'],
    github: 'https://github.com/fajaradnan13',
    featured: false,
  },
  {
    name: 'Web Security Toolkit',
    description: 'A comprehensive toolkit for web application security testing, including XSS, SQL injection, and CSRF detection.',
    tags: ['JavaScript', 'Security', 'Web'],
    github: 'https://github.com/fajaradnan13',
    featured: false,
  },
  {
    name: 'API Security Framework',
    description: 'A framework for testing and securing REST and GraphQL APIs against common vulnerabilities.',
    tags: ['Python', 'API', 'Security'],
    github: 'https://github.com/fajaradnan13',
    featured: false,
  },
];
---

<Layout
  title="Projects"
  description="Open-source projects, security tools, and contributions to the developer community."
  currentPage="projects"
>
  <!-- Header -->
  <section class="bg-gray-50 dark:bg-dark-800/50 border-b border-gray-200 dark:border-terminal-border">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="max-w-3xl">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4">
          Featured <span class="gradient-text">Projects</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          Open-source contributions, security tools, and personal projects.
        </p>
      </div>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Featured Projects -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center gap-2">
        <svg class="w-6 h-6 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
        </svg>
        Featured Projects
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.filter(p => p.featured).map((project) => (
          <article class="card group overflow-hidden">
            <div class="p-6 h-full flex flex-col">
              <!-- Header -->
              <div class="flex items-start justify-between mb-4">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-primary-500/20 to-cyan-500/20 flex items-center justify-center border border-primary-500/30">
                  <svg class="w-6 h-6 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                  </svg>
                </div>
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
                  aria-label="View on GitHub"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              </div>

              <!-- Content -->
              <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-3 group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">
                {project.name}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mb-4 flex-1">
                {project.description}
              </p>

              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mt-auto">
                {project.tags.map((tag) => (
                  <span class="tag text-xs">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Other Projects -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center gap-2">
        <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
        </svg>
        More Projects
      </h2>
      <div class="grid md:grid-cols-2 gap-6">
        {projects.filter(p => !p.featured).map((project) => (
          <article class="card group">
            <div class="p-6">
              <div class="flex items-start justify-between mb-4">
                <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">
                  {project.name}
                </h3>
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
                  aria-label="View on GitHub"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              </div>
              <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
                {project.description}
              </p>
              <div class="flex flex-wrap gap-2">
                {project.tags.map((tag) => (
                  <span class="text-xs text-gray-600 dark:text-gray-400 font-mono">#{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- GitHub CTA -->
    <section class="mt-16">
      <div class="card p-8 text-center">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">Want to see more?</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-xl mx-auto">
          Check out my GitHub profile for more projects, contributions, and experiments.
        </p>
        <a 
          href="https://github.com/fajaradnan13" 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn-primary inline-flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          View GitHub Profile
        </a>
      </div>
    </section>
  </div>
</Layout>
