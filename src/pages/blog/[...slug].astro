import { getCollection, render } from 'astro:content';

/**
 * 1. Menghasilkan path untuk setiap postingan blog secara dinamis.
 */
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

// Pastikan pubDate adalah objek Date yang valid
const publishDate = post.data.pubDate ? new Date(post.data.pubDate) : new Date();

// Fungsi sederhana untuk menghitung estimasi waktu baca
const readingTime = (text: string) => {
  const wordsPerMinute = 200;
  const noOfWords = text.split(/\s/g).length;
  const minutes = noOfWords / wordsPerMinute;
  return Math.ceil(minutes);
};
