---
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  currentPage?: string;
}

const { currentPage = 'home' } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-dark-900/80 dark:bg-dark-900/80 backdrop-blur-xl border-b border-terminal-border">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-primary-500 to-cyan-400 flex items-center justify-center glow-effect">
          <span class="text-dark-900 font-bold font-mono text-sm">&lt;/&gt;</span>
        </div>
        <span class="font-bold text-lg text-gray-100 dark:text-gray-100 group-hover:text-primary-400 transition-colors">
          DJAFAR<span class="text-primary-400">.BLOG</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        <a href="/" class:nav-link={true} class:active={currentPage === 'home'}>
          Home
        </a>
        <a href="/blog" class:nav-link={true} class:active={currentPage === 'blog'}>
          Blog
        </a>
        <a href="/projects" class:nav-link={true} class:active={currentPage === 'projects'}>
          Projects
        </a>
        <a href="/about" class:nav-link={true} class:active={currentPage === 'about'}>
          About
        </a>
      </nav>

      <!-- Right Side Actions -->
      <div class="hidden md:flex items-center gap-4">
        <!-- Theme Toggle -->
        <ThemeToggle client:load />

        <!-- Search Button -->
        <button 
          id="search-btn"
          class="flex items-center gap-2 px-3 py-1.5 text-sm text-gray-400 dark:text-gray-400 hover:text-gray-100 dark:hover:text-gray-100 bg-dark-800 dark:bg-dark-800 hover:bg-dark-700 dark:hover:bg-dark-700 rounded-lg border border-terminal-border transition-all"
          aria-label="Search"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <span class="hidden lg:inline">Search</span>
          <kbd class="hidden lg:inline px-1.5 py-0.5 text-xs bg-dark-700 dark:bg-dark-700 rounded">âŒ˜K</kbd>
        </button>

        <!-- GitHub Link -->
        <a 
          href="https://github.com/fajaradnan13" 
          target="_blank" 
          rel="noopener noreferrer"
          class="social-link"
          aria-label="GitHub Profile"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="flex md:hidden items-center gap-2">
        <!-- Theme Toggle Mobile -->
        <ThemeToggle client:load />
        
        <button 
          id="mobile-menu-btn"
          class="p-2 text-gray-400 dark:text-gray-400 hover:text-gray-100 dark:hover:text-gray-100 hover:bg-dark-800 dark:hover:bg-dark-800 rounded-lg transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div 
    id="mobile-menu"
    class="hidden md:hidden bg-dark-800 dark:bg-dark-800 border-t border-terminal-border"
  >
    <div class="px-4 py-4 space-y-3">
      <a href="/" class="block px-4 py-2 text-gray-300 dark:text-gray-300 hover:text-gray-100 dark:hover:text-gray-100 hover:bg-dark-700 dark:hover:bg-dark-700 rounded-lg transition-colors">Home</a>
      <a href="/blog" class="block px-4 py-2 text-gray-300 dark:text-gray-300 hover:text-gray-100 dark:hover:text-gray-100 hover:bg-dark-700 dark:hover:bg-dark-700 rounded-lg transition-colors">Blog</a>
      <a href="/projects" class="block px-4 py-2 text-gray-300 dark:text-gray-300 hover:text-gray-100 dark:hover:text-gray-100 hover:bg-dark-700 dark:hover:bg-dark-700 rounded-lg transition-colors">Projects</a>
      <a href="/about" class="block px-4 py-2 text-gray-300 dark:text-gray-300 hover:text-gray-100 dark:hover:text-gray-100 hover:bg-dark-700 dark:hover:bg-dark-700 rounded-lg transition-colors">About</a>
      <div class="pt-3 border-t border-terminal-border">
        <a 
          href="https://github.com/fajaradnan13" 
          target="_blank" 
          class="flex items-center gap-2 px-4 py-2 text-gray-300 dark:text-gray-300 hover:text-gray-100 dark:hover:text-gray-100"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Keyboard shortcut for search
  document.addEventListener('keydown', (e) => {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      document.getElementById('search-btn')?.click();
    }
  });

  // Close mobile menu on route change
  window.addEventListener('popstate', () => {
    mobileMenu?.classList.add('hidden');
  });
</script>
