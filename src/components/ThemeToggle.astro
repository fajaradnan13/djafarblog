---
interface Props {
  location?: 'desktop' | 'mobile';
}

const { location = 'desktop' } = Astro.props;
const uniqueId = `theme-toggle-${location}`;
---

<button
  id={uniqueId}
  type="button"
  class="p-2 rounded-lg bg-gray-200 dark:bg-dark-700 hover:bg-gray-300 dark:hover:bg-dark-600 border border-gray-300 dark:border-terminal-border transition-all duration-200"
  aria-label="Toggle dark/light mode"
>
  <!-- Sun Icon (untuk light mode) -->
  <svg
  id={`${uniqueId}-light-icon`}
    class="hidden w-5 h-5 text-yellow-500"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>

  <!-- Moon Icon (untuk dark mode) -->
  <svg
  id={`${uniqueId}-dark-icon`}
    class="hidden w-5 h-5 text-gray-600 dark:text-gray-400"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
  </svg>
</button>

<script>
  // Theme toggle functionality - works for all theme toggle buttons
  function initThemeToggle(buttonId, lightIconId, darkIconId) {
    const themeToggleBtn = document.getElementById(buttonId);
    const themeToggleDarkIcon = document.getElementById(darkIconId);
    const themeToggleLightIcon = document.getElementById(lightIconId);

    // Check local storage for theme
    const theme = localStorage.getItem('theme');

    // Set initial theme
    if (theme === 'light' || (!theme && window.matchMedia('(prefers-color-scheme: light)').matches)) {
      document.documentElement.classList.remove('dark');
      themeToggleLightIcon?.classList.add('hidden');
      themeToggleDarkIcon?.classList.remove('hidden');
    } else {
      document.documentElement.classList.add('dark');
      themeToggleDarkIcon?.classList.add('hidden');
      themeToggleLightIcon?.classList.remove('hidden');
    }

    // Toggle theme on button click
    themeToggleBtn?.addEventListener('click', () => {
      // Toggle icons
      themeToggleDarkIcon?.classList.toggle('hidden');
      themeToggleLightIcon?.classList.toggle('hidden');

      // Toggle theme
      if (document.documentElement.classList.contains('dark')) {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('theme', 'light');
      } else {
        document.documentElement.classList.add('dark');
        localStorage.setItem('theme', 'dark');
      }
    });
  }

  // Initialize all theme toggles on the page
  document.addEventListener('DOMContentLoaded', () => {
    const toggles = [
      { button: 'theme-toggle-desktop', light: 'theme-toggle-desktop-light-icon', dark: 'theme-toggle-desktop-dark-icon' },
      { button: 'theme-toggle-mobile', light: 'theme-toggle-mobile-light-icon', dark: 'theme-toggle-mobile-dark-icon' }
    ];
    
    toggles.forEach(toggle => {
      initThemeToggle(toggle.button, toggle.light, toggle.dark);
    });
  });
</script>
